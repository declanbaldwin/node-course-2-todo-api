<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Todo App</title>
</head>

<style>
    * {
        font-family: Arial;
        box-sizing:  border-box;
    }

    .task {
        padding: 10px;
        border: 1px solid blue;
    }

    form {
        display: flex;
    }

    form label {
        flex: 1;
    }
</style>

<body>
    <h1>Please Complete The Tasks By Uploading The Following Images </h1>
    <form action="/delete" method="POST">
        <button>RESET</button>
    </form>

    <% todos.forEach( function( todos ){ %>
    <div class="task">

        <% if (todos.completed) { %>
        <p>Task:
            <%= todos.text %>
        </p>
        <p>Status: Completed</p>
        <% } else { %>
        <form action="/file/<%= todos._id %>" method="POST" enctype="multipart/form-data">
            <label>Task:
                <%= todos.text %></label>
            <input type="hidden" name="id" value="<%= todos._id %>">
            <input type="file" name="file-to-upload">
            <button>Complete Task</button>
        </form>
        <p>Status: To be completed</p>
        <% } %>
    </div>
    <% }); %>
</body>

</html>